@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.Warning != null)
{
    <div class="alert alert-warning mb-3 p-2" role="alert">
        <div><i class="bi bi-exclamation-triangle-fill text-warning"></i> @ViewBag.Warning</div>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mb-3 p-2" role="alert">
        <div><i class="bi bi-info-circle-fill text-info"></i> @ViewBag.Message</div>
    </div>
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="post" enctype="multipart/form-data" asp-action="Index">
        <input type="file" name="files" multiple accept=".json" />
        <button class="btn btn-primary" type="submit">Upload</button>
    </form>
</div>

